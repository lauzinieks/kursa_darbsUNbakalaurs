{
    "manifest_version": 3,
    "name": "Dialogflow Messenger Inject",
    "version": "1.0",
    "description": "Inject Dialogflow Messenger into LU homepage.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.lu.lv/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }